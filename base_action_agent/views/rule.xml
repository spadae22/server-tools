<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="open_action_rule" model="ir.actions.act_window">
            <field name="name">Rules</field>
            <field name="res_model">rule.rule</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_action_rule"
                  name="Rules"
                  sequence="30"
                  parent="base.menu_automation"
                  action="open_action_rule" />

        <record id="view_rule_rule_form" model="ir.ui.view">
            <field name="name">rule.rule.form</field>
            <field name="model">rule.rule</field>
            <field name="arch" type="xml">
                <form>
                  <group>
                    <group>
                        <field name="name" />
                        <field name="model_id" />
                        <field name="ruleset_id" />
                    </group>
                    <group>
                        <field name="active" />"
                        <field name="sequence" />"
                    </group>
                  </group>
                  <group>
                      <field name="state_from_ids"
                             context="{'default_type': 'state', 'default_model_id': model_id}" />
                      <field name="state_to_ids"
                             context="{'default_type': 'state', 'default_model_id': model_id}" />
                      <field name="condition_ids"
                             context="{'default_model_id': model_id}" />
                      <field name="note" />"
                  </group>
                </form>
            </field>
        </record>

        <record id="view_rule_rule_tree" model="ir.ui.view">
            <field name="name">rule.rule.tree</field>
            <field name="model">rule.rule</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence" />
                    <field name="name" />
                    <field name="ruleset_id" />
                    <field name="model_id" />
                    <field name="state_from_ids" />
                    <field name="state_to_ids" />
                    <field name="condition_ids" />
                </tree>
            </field>
        </record>

    </data>
</openerp>
